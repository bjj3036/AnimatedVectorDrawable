<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_menu_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/animator_menu_to_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_menu_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/animator_menu_to_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_menu_arrow" />
    <View
        android:id="@+id/view_pause_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/animator_pause_to_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_menu_close" />
    <View
        android:id="@+id/view_check"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/animator_check_draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pause_play" />

</androidx.constraintlayout.widget.ConstraintLayout>